<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Логин"
            android:id="@+id/tvLogin" android:layout_alignBottom="@+id/edtLogin"
            android:layout_alignParentLeft="true" android:layout_margin="5dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtLogin" android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" android:layout_toRightOf="@+id/tvPass" android:layout_margin="5dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пароль"
            android:id="@+id/tvPass" android:layout_alignBottom="@+id/edtPass" android:layout_alignParentLeft="true"
            android:layout_margin="5dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtPass" android:layout_below="@+id/edtLogin" android:layout_toRightOf="@+id/tvPass"
            android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
            android:layout_alignParentRight="true" android:layout_marginRight="5dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вход"
            android:id="@+id/button" android:layout_below="@+id/edtPass" android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" android:layout_margin="5dp" android:onClick="loginOk"/>
</RelativeLayout>